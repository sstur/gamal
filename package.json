{
  "name": "gamal",
  "version": "0.0.0",
  "scripts": {
    "typecheck": "tsc --noEmit -p .",
    "lint": "eslint --max-warnings 0 .",
    "unit": "echo 'TODO: Unit tests' && exit 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run typecheck && npm run lint && npm run format:check && npm run unit",
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c && prettier --write dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@types/node": "^18.19.33",
    "eslint": "^8.57.0",
    "eslint-config-xt": "^1.8.0",
    "prettier": "^3.2.5",
    "rollup": "^2.77.0",
    "typescript": "~5.1.6"
  },
  "eslintConfig": {
    "extends": "xt",
    "ignorePatterns": [
      "/dist"
    ],
    "rules": {
      "prefer-const": "warn",
      "@typescript-eslint/consistent-type-imports": "warn",
      "@typescript-eslint/no-var-requires": "off",
      "import/order": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "",
      "^[./]"
    ]
  },
  "license": "MIT"
}
